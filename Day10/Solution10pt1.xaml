            <ui:AssignOperation.Value>
              <InArgument x:TypeArguments="s:Int32[]" xml:space="preserve">[(From astroid In Astroids
Select
    (Aggregate i In
        From d In Astroids
        Select New With {
            Key .Right = d.Item1 - astroid.Item1 &gt; 0,
            Key .Down = d.Item2 - astroid.Item2 &gt; 0,
            Key .Slope = (d.Item2 - astroid.Item2) / (d.Item1 - astroid.Item1)
